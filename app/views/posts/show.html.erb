<div id="content">

<h1>
  <%= @post.title %>
</h1>

<%= image_tag @post.photo.url(:large) %>
 
<p>
  <%= @post.text %>
</p>

<h2>Comments</h2>
<%= render @post.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<%= link_to 'Back', posts_path, :class => "button" %>
<%= link_to 'Edit', edit_post_path(@post), :class => "button" %>

</div>
