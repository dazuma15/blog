<div id="content">
<h1>
  <%= @album.title %>
</h1>
<div id="photos">
<%= render @photos %>
</div>
<% if admin_signed_in? %>
<h2>Add a photo:</h2>
<%= form_for([@album, @album.photos.build], :html => { :multipart => true }) do |f| %>
  <%= f.file_field :upload, multiple: true, name: "photo[upload]", :style => "margin-bottom: 20px;" %>
<% end %>
<% end %>
<%= link_to 'Back', albums_path, :class => "button" %>
<% if admin_signed_in? %>
<%= link_to 'Edit', edit_album_path(@album), :class => "button" %>
<% end %>
</div>
