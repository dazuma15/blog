<div id="content">
<h1>
  <%= @album.title %>
</h1>
<div id="photos">
<% @photos.each do |photo| %>
<div class="photo">
<%= image_tag photo.upload.url(:small) %>
<% if admin_signed_in? %>
<p>
 <%= link_to 'Delete', [photo.album, photo],
               method: :delete,
               data: { confirm: 'Are you sure?' }, :class => "button" %>
</p>
<% end %>
</div>
<% end %>
</div>
<% if admin_signed_in? %>
<h2>Add a photo:</h2>
<%= form_for([@album, @album.photos.build], :html => { :multipart => true }) do |f| %>
  <%= f.label :upload %>
  <%= f.file_field :upload, multiple: true, name: "photo[upload]" %>
<% end %>
<% end %>
<%= link_to 'Back', albums_path, :class => "button" %>
<% if admin_signed_in? %>
<%= link_to 'Edit', edit_album_path(@album), :class => "button" %>
<% end %>
</div>
