<p>
  <strong>Title:</strong>
  <%= @album.title %>
</p>

<% @photos.each do |photo| %>
<%= image_tag photo.upload.url() %>
<% end %>

<h2>Add a photo:</h2>
<%= form_for([@album, @album.photos.build], :html => { :multipart => true }) do |f| %>
  <%= f.label :upload %>
  <%= f.file_field :upload %>
  
  <p>
  <%= link_to 'Destroy Photo', [photo.album, photo],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
  </p>

    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', albums_path%>
<%= link_to 'Edit', edit_album_path(@album) %>
